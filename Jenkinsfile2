def gv
pipeline {
    agent any
    tools{
        maven 'maven-3.9.4'
    }
    stages {
        stage("test") {
            steps {
                script {
                    echo "testing jar"
                }
            }
        }
        stage("build jar") {
         when{
                            expression{
                                BRANCH_NAME== 'master'
                            }
                        }
            steps {

                script {
                    echo "building jar"
                }
            }
        }
        stage("build image") {
        when{
                            expression{
                                BRANCH_NAME== 'master'
                            }
                        }
            steps {
                script {
                    echo "building image"
                }
            }
        }
        stage("deploy") {
        when{
                            expression{
                                BRANCH_NAME == 'master'
                            }
                        }
            steps {

                script {
                    echo "deploying"
                }
            }
        }
    }
}